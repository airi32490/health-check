<h1>コメント投稿画面</h1>

<%= form_with url: comments_path, method: :post,id: "form" do |form| %>
  <%= form.text_field :memo %>
  <%= form.submit 'コメントする' , id: "submit" %>
<% end %>

<% @comments.each do |comment| %>
  <div>
    <%= comment.memo %>
    <%= comment.user.name%>
    <%= l comment.created_at %>
  </div>
<% end %>