<%= render 'shared/header2' %>

<%= form_with model: @user, url: user_session_path, method: :post, class: 'text-center', local: true do |f| %>
<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='text-center mt-5'>
      Login
    </h1>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text mt-5">email</label>
    </div>
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">password</label>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"" %>
  </div>
  <div class='login-btn'>
    <%= f.submit "Login" ,class:"btn btn-dark btn-lg mt-4" %>
  </div>
</div>
<% end %>

