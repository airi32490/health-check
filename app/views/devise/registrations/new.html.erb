<%= render 'shared/header2' %>


<%= form_with model: @user, url: user_registration_path, method: :post, class: 'text-center', local: true do |f| %>
<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='text-center mt-5'>
      Sign up
    </h1>
  </div>

  <%= render 'shared/error_messages', model: @user %>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text mt-5">name</label>
    </div>
    <%= f.text_field :name, class:"input-default", id:"name", placeholder:"例) 田中太郎", maxlength:"20" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">email</label>
    </div>
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">password</label>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">password(確認)</label>
    </div>
    <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">確認者資格の有無</label>
    </div>
    <%= f.collection_select(:checker_id, Checker.all, :id, :name, {}, {class:"select-box", id:"checker"}) %>
  </div>  
  <div class='register-btn'>
    <%= f.submit "Sign up" ,class:"btn btn-dark btn-lg mt-4" %>
  </div>
</div>
<% end %>


