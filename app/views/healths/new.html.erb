<div class="items-sell-contents">
  <div class="items-sell-main">
    <h1 class="text-center mt-5">Health check</h1>
    <%= form_with model: @health, class:"text-center", local: true do |f| %>

    <%= render 'shared/error_messages', model: @health %>

    <div class="new-items">
      <div class="mt-5">
        体温
      </div>
      <%= f.text_area :body_temperature, class:"items-text", id:"item-name", placeholder:"（半角数字で入力)", maxlength:"5" %>
      <div class="mt-3">
          体調
        </div>
        <%= f.collection_select(:condition_id, Condition.all, :id, :name, {}, {class:"select-box", id:"item-sales-status"}) %>
        <div class="mt-3">
        アルコール数値
      </div>
      <%= f.text_area :alcohol_level, class:"items-text", id:"item-name", placeholder:"（半角数字で入力)", maxlength:"5" %>
    </div>

    <div class="sell-btn-contents">
      <%= f.submit "送信する" ,class:"btn btn-dark btn-lg mt-4" %>
    </div>
    <div class="mt-3">
      <%=link_to 'もどる', root_path %>
    </div>
  </div>
  <% end %>
</div>