<h1 class="text-center mt-5 greeting">Top</h1>

<div class="text-right mt-3 mr-5">
  <%= Date.current.strftime('%Y年%m月%d日') %>
</div>
<div class="text-right mr-5">
  <%= "ログインユーザー: #{current_user.name}さん" %>
</div>

<div class="container">
  <div class="text-center mt-4">
    <%= link_to 'Health check', new_health_path, class:"login-link"  %>
  </div>
  <% if current_user.checker_id == 2%>
  <div class="text-center mt-4">
    <%= link_to 'Search', search_healths_path, class:"login-link"  %>
  </div>
  <% end %>
  <div class="text-center mt-4">
    <%= link_to 'Logout', destroy_user_session_path, method: :delete, class:"login-link"  %>
  </div>
  <div class="mt-5 text-center">
    <%= image_tag '/images/officework_man.png', style:"width: 20%;" %>
    <%= image_tag '/images/officework_lady.png', style:"width: 20%;" %>
  </div>
</div>
